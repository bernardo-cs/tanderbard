<%= form_for @email, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :to, :class => 'control-label'%>
    <div class="controls">
      <%= f.text_field :to, :class => 'text_field' , "data-provide" => "typeahead", 'autocomplete'=>'off', "data-source" => @autocomplete_items.to_json%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar Email", :class => 'btn btn-primary', 'data-loading-text' => "Enviar..." %>
  </div>
<% end %>

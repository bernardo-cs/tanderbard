<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @email.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @email.to %></dd>
    <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @email.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @email.body %></dd>
  <% if @email.authentication%>
  <dt><strong>Passou na autenticacao?</strong></dt>
  <dd><%= @email.authentication %></dd>
    <% if @email.authentication=='true'%>
      <% if @email.signer %>
      <dt><strong>Assinado pelo email:</strong></dt>
      <dd><%= @email.signer %></dd>
      <%end%>
      <% if @email.date %>
      <dt><strong>Assinado na data:</strong></dt>
      <dd><%= @email.date %></dd>
      <%end%>
    <%end%>
  <%end%>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to t('.new', :default => "Responder"),
            new_email_path,
            :class => 'btn btn-primary' %>
</div>
